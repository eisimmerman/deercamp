{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JournalEntry",
  "type": "object",
  "required": ["id", "captureMode", "content", "sync"],
  "properties": {
    "id": { "type": "string" },
    "captureMode": {
      "type": "string",
      "enum": ["field", "camp", "system"]
    },
    "content": {
      "type": "object",
      "required": ["kind"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["moment", "note", "photo", "voice", "mixed"]
        }
      }
    },
    "sync": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["pending", "synced", "failed"]
        }
      }
    }
  },
  "additionalProperties": true
}
